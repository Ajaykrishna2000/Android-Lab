<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_marginTop="50dp"
        android:textSize="45sp"
        android:textAlignment="center"
        android:textColor="#2EACE4"
        android:textFontWeight="20"
        android:text="REGISTER NOW!!!" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="150dp"
        android:text="First Name:"
        android:textAlignment="center"
        android:textColor="#2EACE4"
        android:textFontWeight="20"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/et1"
        android:layout_width="240sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150sp"
        android:layout_marginTop="150sp"
        android:ems="10"
        android:hint="Enter Firstname"
        android:inputType="textPersonName"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="210dp"
        android:text="Last Name:"
        android:textAlignment="center"
        android:textColor="#2EACE4"
        android:textFontWeight="20"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/et2"
        android:layout_width="240sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150sp"
        android:layout_marginTop="210sp"
        android:ems="10"
        android:hint="Enter Lastname"
        android:inputType="textPersonName"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="129dp"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="270dp"
        android:text="Age:"
        android:textAlignment="center"
        android:textColor="#2EACE4"
        android:textFontWeight="20"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/et3"
        android:layout_width="240sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150sp"
        android:layout_marginTop="270sp"
        android:ems="10"
        android:hint="Enter Age"
        android:inputType="textPersonName"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tv5"
        android:layout_width="129dp"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="330dp"
        android:text="Email:"
        android:textAlignment="center"
        android:textColor="#2EACE4"
        android:textFontWeight="20"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/et4"
        android:layout_width="240sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150sp"
        android:layout_marginTop="330sp"
        android:ems="10"
        android:hint="Enter Email Id"
        android:inputType="textEmailAddress"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tv6"
        android:layout_width="129dp"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="390dp"
        android:text="Username:"
        android:textAlignment="center"
        android:textColor="#2EACE4"
        android:textFontWeight="20"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/et5"
        android:layout_width="240sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150sp"
        android:layout_marginTop="390sp"
        android:ems="10"
        android:hint="Enter Username"
        android:inputType="textPassword"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tv7"
        android:layout_width="129dp"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="450dp"
        android:text="Password:"
        android:textAlignment="center"
        android:textColor="#2EACE4"
        android:textFontWeight="20"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/et6"
        android:layout_width="240sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150sp"
        android:layout_marginTop="450sp"
        android:ems="10"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:textAlignment="center" />

    <Button
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75sp"
        android:layout_marginTop="520sp"
        android:background="#2EACE4"
        android:text="Register" />

    <Button
        android:id="@+id/b2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200sp"
        android:layout_marginTop="520sp"
        android:background="#2EACE4"
        android:text="Cancel" />



</RelativeLayout>